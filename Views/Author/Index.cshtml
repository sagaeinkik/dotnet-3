@model IEnumerable<BookApp.Models.Author>

@{
    ViewData["Title"] = "Författare";
}

<div class="content">
    <h1>@ViewData["Title"]</h1>

    <a asp-action="Create" class="btn add">Lägg till författare</a>

    <div class="authors">

        @foreach (var author in Model)
        {
            <article class="author">
                <h2>@author.FullName</h2>

                <div class="ctrls">
                    <a asp-action="Details" asp-route-id="@author.Id" class="btn details">Se författare</a>
                    <a asp-action="Edit" asp-route-id="@author.Id" class="btn edit">Redigera</a>
                    <a asp-action="Delete" asp-route-id="@author.Id" class="btn delete">Radera</a>
                </div>
            </article>

        }
    </div>
</div>
