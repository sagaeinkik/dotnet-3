@model BookApp.Models.Author

@{
    ViewData["Title"] = "Radera";
}


<div class="text">
    <h1>Ta bort författare</h1>
    <h3>Är du helt säker på att du vill ta bort denna?</h3>

    <section class="author info">
        <h2>@Model.FullName</h2>
        @if (@Model.Bio != null)
        {
            <p class="bio">@Html.DisplayNameFor(model => model.Bio):</p>
            <p>@Model.Bio</p>

        }
        else
        {
            <p>Det finns ingen biografi för denna författare...</p>
        }

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Radera" class="btn delete" />
        </form>
        <div class="ctrls">

            <a asp-action="Index" class="btn back">Se alla författare</a>
        </div>
    </section>
</div>
